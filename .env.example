# =============================================================================
# MEDICAL AI SYSTEM ENVIRONMENT CONFIGURATION - EXAMPLE
# =============================================================================
# 
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual configuration
# 3. Never commit .env file to version control
# 4. Keep your secrets secure
#
# =============================================================================

# Flask Application Configuration
# =============================================================================
SECRET_KEY=your_super_secret_flask_key_here
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration (PostgreSQL - Neon Cloud)
# =============================================================================
# Neon PostgreSQL Database Connection String
# Get from: https://console.neon.tech/
DATABASE_URL=postgresql://username:password@your-neon-host.aws.neon.tech/database?sslmode=require
SQLALCHEMY_DATABASE_URI=postgresql://username:password@your-neon-host.aws.neon.tech/database?sslmode=require
SQLALCHEMY_TRACK_MODIFICATIONS=False

# AI/ML Model Configuration
# =============================================================================
BREAST_CANCER_MODEL_PATH=Modal/Breast Cancer/breast_cancer.keras
LUNG_CANCER_MODEL_PATH=Modal/Lung Cancer/Lung Cancer.keras

# Groq API Configuration (for AI Chat)
# =============================================================================
# Get your API key from: https://console.groq.com/home
GROQ_API_KEY=your_groq_api_key_here
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions
GROQ_MODEL=gemma2-9b-it

# File Upload Configuration
# =============================================================================
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg

# Cloudinary Configuration (Image Storage)
# =============================================================================
# Get your credentials from: https://cloudinary.com/console
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# RAG Configuration
# =============================================================================
PDF_FOLDER=RAG Data
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Application Settings
# =============================================================================
APP_NAME=आरोग्यनिदानम् - Medical AI System
APP_VERSION=2.0.0

# Email Configuration (Optional)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password

# Security Configuration
# =============================================================================
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/medical_ai.log

# AI Model Performance Settings
# =============================================================================
TENSORFLOW_CPP_MIN_LOG_LEVEL=2
